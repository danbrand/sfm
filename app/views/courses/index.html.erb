<div class="container">  
  <p id="notice"><%= notice %></p>

  <div class="row">
  <% @courses.each do |course| %> 
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
         <img src="<%= course.image %>">
        <div class="caption">
          <h3><%= link_to course.code, course_path(course.id)%></h3>
          <h4><%= course.title %></h4>
        </div>
      </div>

    </div>
    <% end %>
  </div>


  </div>

