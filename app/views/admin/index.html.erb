<div class="jumbotron" id="admin_jumbotron">
  <h2>SpoonFeedMe Admin Panel</h2>
  <h4>Users</h4>
</div>


<div class="container">
	<ul class="nav nav-pills">
	  <li role="presentation" class="active"><a href="#">Users</a></li>
	  <li role="presentation"><%= link_to 'Universities', admin_universities_path %></li>
	  <li role="presentation"><%= link_to 'Courses', admin_courses_path %></li>
	  <li role="presentation"><%= link_to 'Topics', topics_path %></li>
	   <li role="presentation"><%= link_to 'Videos', videos_path %></li>
	</ul>

<table class="table table-stripped" id="admin_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>University</th>
      <th>Degree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.user.email %></td>
        <td><%= profile.university %></td>
        <td><%= profile.degree %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>

