<div class="jumbotron" id="admin_jumbotron">
  <h2>SpoonFeedMe Admin Panel</h2>
  <h4>Universities</h4>
</div>

<div class="container">

  <p id="notice"><%= notice %></p>

  <ul class="nav nav-pills">
    <li role="presentation">  <%= link_to 'Users', admin_path %></li>
    <li role="presentation" class="active"><%= link_to 'Universities', admin_universities_path %></li>
    <li role="presentation"><%= link_to 'Courses', admin_courses_path %></li>
    <li role="presentation"><%= link_to 'Topics', topics_path %></li>
     <li role="presentation"><%= link_to 'Videos', videos_path %></li>
  </ul>


  <table class="table table-stripped" id="admin_table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @universities.each do |university| %>
        <tr>
          <td><%= university.name %></td>
          <td><%= university.country %></td>
          <td><%= link_to 'Show', university %></td>
          <td><%= link_to 'Edit', edit_university_path(university) %></td>
          <td><%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Create New University', new_university_path, class: "btn btn-primary btn-sm" %>
</div>