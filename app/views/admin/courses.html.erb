<div class="jumbotron" id="admin_jumbotron">
  <h2>SpoonFeedMe Admin Panel</h2>
  <h4>Courses</h4>
</div>



<div class="container">  
  <p id="notice"><%= notice %></p>

  <ul class="nav nav-pills">
    <li role="presentation">  <%= link_to 'Users', admin_path %></li>
    <li role="presentation"><%= link_to 'Universities', admin_universities_path %></li>
    <li role="presentation" class="active"><%= link_to 'Courses', admin_courses_path %></li>
    <li role="presentation"><%= link_to 'Topics', topics_path %></li>
     <li role="presentation"><%= link_to 'Videos', videos_path %></li>
  </ul>

  <table class="table table-stripped" id="admin_table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Title</th>
        <th>Student name</th>
        <th>University</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.code %></td>
          <td><%= course.title %></td>
          <td><%= course.student_name %></td>
          <td><%= course.university.name %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Create New Course', new_course_path, class: "btn btn-primary btn-sm" %>
</div>