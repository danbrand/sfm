<div class="jumbotron" id="admin_jumbotron">
  <h2>SpoonFeedMe Admin Panel</h2>
  <h4>Topics</h4>
</div>

<div class="container">

  <p id="notice"><%= notice %></p>

  <ul class="nav nav-pills">
    <li role="presentation">  <%= link_to 'Users', admin_path %></li>
    <li role="presentation"><%= link_to 'Universities', admin_universities_path %></li>
    <li role="presentation"><%= link_to 'Courses', admin_courses_path %></li>
    <li role="presentation" class="active"><%= link_to 'Topics', admin_topics_path %></li>
     <li role="presentation"><%= link_to 'Videos', admin_videos_path %></li>
  </ul>

<table class="table table-stripped" id="admin_table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Course</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.number %></td>
        <td><%= topic.title %></td>
        <td><%= topic.course.code %></td>
        <td><%= topic.course.university.name %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Topic', new_topic_path, class: "btn btn-primary btn-sm" %>


</div>
