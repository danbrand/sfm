<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :title %>
    <%= f.input :duration %>
    <%= f.input :embed_code %>
    <%= f.input :premium, as: :select %>
    <%= f.association :topic %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
